# Configuración de entorno para SemáforoBot
# Copia este archivo a .env y configura tus valores

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Exchange Configuration (CCXT - datos públicos gratuitos)
EXCHANGE_NAME=binance
# API Key/Secret son OPCIONALES - solo para trading real
# Para análisis, los datos son públicos y no necesitas credenciales
EXCHANGE_API_KEY=
EXCHANGE_API_SECRET=
EXCHANGE_TESTNET=true

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG_MODE=true

# Trading Defaults
DEFAULT_RISK_PERCENT=1.0
DEFAULT_TP_PERCENT=2.0
DEFAULT_ASSETS=BTC,ETH,SOL
